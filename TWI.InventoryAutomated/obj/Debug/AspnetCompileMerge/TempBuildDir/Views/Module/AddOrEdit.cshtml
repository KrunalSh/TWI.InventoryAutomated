@model TWI.InventoryAutomated.Models.Module
@{
    Layout = null;
}

@using (Html.BeginForm("AddOrEdit", "Module", FormMethod.Post, new { onsubmit = "return SubmitForm(this)" }))
{
    @Html.HiddenFor(model => model.ModuleID)
    <div class="form-group">
        @Html.LabelFor(model => model.ModuleName, new { @class = "control-label" })
        <span class="requiredfield">*</span>
        @Html.EditorFor(model => model.ModuleName, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.ModuleName)
    </div>
    <div class="form-group txtNotification">
        @{
            var IsActive = true;
            if (Model.IsActive != null)
            { IsActive = (bool)Model.IsActive; }
        }
        @Html.CheckBoxFor(x => IsActive)
        @Html.LabelFor(model => model.IsActive, new { @class = "control-label" })
    </div>
    <br />
    <br />

    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-primary" />
        <input type="reset" value="Cancel" class="btn" onclick="Cancelbutton();" />
    </div>
}
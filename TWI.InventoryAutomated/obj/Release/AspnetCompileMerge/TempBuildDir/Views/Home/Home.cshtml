
@{
    ViewBag.Title = "Home";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using TWI.InventoryAutomated.DataAccess;

<div class="container">

    @*padding-left:20px*@
    <div class="row" style="padding-bottom:30px;">
        @if (CommonServices.IsUserhasPermissionsOnModule("InBound") || CommonServices.IsUserSuperAdmin(Convert.ToString(Session["InstanceName"]), Convert.ToString(Session["CompanyName"])))
        {
        <div class="col-sm-4">
            @*padding:11px;*@
            <div class="input-group" style="float:left;margin:5px;">
                <button type="button" class="btn" style="width:200px; height:90px;background-color:#ded8d8 !important;border-radius:5px;">@TWI.InventoryAutomated.Resources.GlobalResource.Inbound</button>
            </div>
        </div>
        }
        @if (CommonServices.IsUserhasPermissionsOnModule("OutBound") || CommonServices.IsUserSuperAdmin(Convert.ToString(Session["InstanceName"]), Convert.ToString(Session["CompanyName"])))
        {
            <div class="col-sm-4">
                @*class="input-group"*@
                @*background-color:#ded8d8 !important;*@
                <div style="float:left;margin:5px;">
                    <button type="button" class="btn" style="width:200px;height:90px;background-color:#ded8d8 !important;border-radius:5px;">@TWI.InventoryAutomated.Resources.GlobalResource.OutBound</button>
                </div>
            </div>
        }
        @if (CommonServices.IsUserhasPermissionsOnModule("Internal") || CommonServices.IsUserSuperAdmin(Convert.ToString(Session["InstanceName"]), Convert.ToString(Session["CompanyName"])))
        {
            <div class="col-sm-4">
                @*padding:11px;*@
                <div class="input-group" style="float:left;margin:5px;">
                    <button type="button" class="btn" style="width:200px;height:90px;background-color:#ded8d8 !important;border-radius:5px;">@TWI.InventoryAutomated.Resources.GlobalResource.Internal</button>
                </div>
            </div>
        }
        @if (CommonServices.IsUserhasPermissionsOnModule("Admin") || CommonServices.IsUserSuperAdmin(Convert.ToString(Session["InstanceName"]), Convert.ToString(Session["CompanyName"])))
        {
            <div class="col-sm-4">
                @*padding:11px;*@
                <div class="input-group" style="float:left;margin:5px;">
                    <button type="button" class="btn" style="width:200px;height:90px;background-color:#ded8d8 !important;border-radius:5px;" onclick="location.href='@Url.Action("SubMenu", "Home")'">@TWI.InventoryAutomated.Resources.GlobalResource.Admin</button>
                </div>
            </div>
        }
        @if (CommonServices.IsUserhasPermissionsOnModule("Stock Count") || CommonServices.IsUserSuperAdmin(Convert.ToString(Session["InstanceName"]), Convert.ToString(Session["CompanyName"])))
        {
            <div class="col-sm-4">
                @*padding:11px;*@
                <div class="input-group" style="float:left;margin:5px;">
                    <button type="button" class="btn" style="width:200px;height:90px;background-color:#ded8d8 !important;border-radius:5px;" onclick="location.href='@Url.Action("Index", "StockCount")'">@TWI.InventoryAutomated.Resources.GlobalResource.StockCount</button>
                </div>
            </div>
        }
            <div class="col-sm-4">
                @*padding:11px;*@
                <div class="input-group" style="float:left;margin:5px;">
                    <button type="button" class="btn" style="width:200px;height:90px;background-color:#ded8d8 !important;border-radius:5px;" onclick="location.href='@Url.Action("LogOut","Home")'">@TWI.InventoryAutomated.Resources.GlobalResource.Logout</button>
                </div>
            </div>
    </div>
</div>

@**@

<div class="row" style="margin:auto;width:80% !important">
    <div style="margin:15px auto;width:100% !important;max-width:100%;border:2px #808080 solid;">
        <div style="background-color: #808080;color: #ffffff;padding: 5px;height: 30px;" id="topHeading">
            <div style="font-weight:bold">@TWI.InventoryAutomated.Resources.GlobalResource.MsgAdminSheetTitle - Select Item(s)</div>
            <a style="margin-top:-24px;float: right;color: white;" href='@Url.Action("AdminStockCountSheet", "StockCount",Convert.ToInt32(Session["TeamID"]))'><i class="fa fa-arrow-circle-o-right fa-2x"></i></a>
        </div>

        <div class="row">
            <div style="margin:15px auto;width:100% !important;max-width:100%;">
                <div style="width:100% !important;margin:15px;">
                    <div class="row" style="margin:10px !important;">
                        <div style="float:left;margin-right:10px;">
                            @Html.Label("Count", new { @class = "control-label" })
                            @Html.DropDownList("SourceCounts", ViewBag.CountList as SelectList, new { @class = "form-control", @id = "ddlCounts" })
                        </div>
                        <div style="float:left;margin-right:10px;">
                            @Html.Label("Search Field", new { @class = "control-label" })

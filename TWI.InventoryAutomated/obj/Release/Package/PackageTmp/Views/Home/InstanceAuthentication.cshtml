@model  TWI.InventoryAutomated.Models.Instance
@{
    ViewBag.Title = "InstanceAuthentication";
}
@using (Html.BeginForm("Home", "Home", FormMethod.Post, new { onsubmit = "return SubmitInstanceForm(this)" }))
{
    <div class="container" style="width:110%">
        <div class="row">
            <h6 style="color:red" id="LoginError"></h6>
            <div class="form-group">
                @Html.LabelFor(model => model.ID, TWI.InventoryAutomated.Resources.GlobalResource.Instance, htmlAttributes: new { @class = "control-label" })
                @Html.DropDownListFor(Model => Model.ID, new SelectList(ViewBag.Instances, "ID", "InstanceName"), new { @class = "form-control", @id = "Instances" })
                @Html.ValidationMessageFor(model => model.ID)
            </div>
            <div class="form-group">
                <label class="control-label">@TWI.InventoryAutomated.Resources.GlobalResource.Company</label>
                <select id="Companies" class="form-control"></select>
            </div>
            <div class="form-group">
                <label class="control-label">@TWI.InventoryAutomated.Resources.GlobalResource.Location</label>
                <select id="Location" class="form-control"></select>
            </div>
            <br />
            <div class="form-group" style="padding-left:200px;">
                <input type="submit" value="@TWI.InventoryAutomated.Resources.GlobalResource.Proceed" class="btn btn-primary" />
            </div>
        </div>
    </div>
}



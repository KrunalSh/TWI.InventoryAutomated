@model TWI.InventoryAutomated.Models.User
@{
    Layout = null;
}

@using (Html.BeginForm("AddOrEdit", "User", FormMethod.Post, new { onsubmit = "return SubmitForm(this)" }))
{
    @Html.HiddenFor(model => model.UserID)
    <div class="row-fluid">
        <table style="width:100%">
            <tr style="vertical-align:top">
                <td>
                    <div>
                        @Html.LabelFor(model => model.UserName, TWI.InventoryAutomated.Resources.GlobalResource.UserName, new { @class = "control-label" })
                        <span class="requiredfield">*</span>
                        @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.UserName)
                    </div>
                </td>
                <td>
                    <div>
                        @Html.LabelFor(model => model.NAV_ID, "NAV ID", new { @class = "control-label" })
                        <input type="text" class="form-control" id="txtNAVID" name="txtNAVID" value="@ViewBag.selectedNAVID" text="@ViewBag.selectedNAVID" />
                    </div>
                </td>
            </tr>
            <tr style="vertical-align:top">
                <td>
                    <div>
                        @Html.LabelFor(model => model.Password, TWI.InventoryAutomated.Resources.GlobalResource.Password, new { @class = "control-label" })
                        <span class="requiredfield">*</span>
                        @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Password)
                    </div>
                </td>
                <td>
                    <div>
                        @Html.LabelFor(model => model.ConfirmPassword, TWI.InventoryAutomated.Resources.GlobalResource.ConfirmPassword, new { @class = "control-label" })
                        <span class="requiredfield">*</span>
                        @Html.EditorFor(model => model.ConfirmPassword, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.ConfirmPassword)
                    </div>
                </td>
            </tr>
            <tr style="vertical-align:top">
                <td>
                    <div>
                        @Html.LabelFor(model => model.DisplayName, TWI.InventoryAutomated.Resources.GlobalResource.DisplayName, new { @class = "control-label" })
                        @Html.EditorFor(model => model.DisplayName, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.DisplayName)
                    </div>
                </td>
                <td>
                    <div>
                        <label class="control-label">@TWI.InventoryAutomated.Resources.GlobalResource.Languages</label>
                        <select id="ListLanguages" multiple="multiple" class="form-control" name="languagesname">
                            @if (ViewBag.Languages != null)
                            {
                                foreach (var item in ViewBag.Languages)
                                {
                                    if (ViewBag.selectedLanguages != null && ViewBag.selectedLanguages.Contains(Convert.ToInt32(item.Value)))
                                    {
                                        <option selected="selected" value="@item.Value">@item.Text</option>
                                    }
                                    else
                                    {
                                        <option value="@item.Value">@item.Text</option>
                                    }
                                }
                            }
                        </select>
                    </div>
                </td>
            </tr>
            <tr style="vertical-align:top">
                <td>
                    <div>
                        @Html.LabelFor(model => model.EmailID, TWI.InventoryAutomated.Resources.GlobalResource.EmailID, new { @class = "control-label" })
                        <span class="requiredfield"></span>
                        @Html.EditorFor(model => model.EmailID, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.EmailID)
                    </div>
                </td>
                <td>
                    <div class="txtNotification" style="float:right;margin-right:10px;">
                        @{
                            var IsActive = true;
                            if (Model.IsActive != null)
                            { IsActive = (bool)Model.IsActive; }
                        }
                        @Html.CheckBoxFor(x => IsActive)
                        @Html.LabelFor(model => model.IsActive, TWI.InventoryAutomated.Resources.GlobalResource.Active, new { @class = "control-label" })
                    </div>
                </td>
            </tr>
        </table>
        <br />
        <br />

        <div class="form-group" style="margin-right: 18px;float:right;">
            <input type="submit" value="@TWI.InventoryAutomated.Resources.GlobalResource.Save" class="btn btn-primary" />
            <input type="reset" value="@TWI.InventoryAutomated.Resources.GlobalResource.Cancel" class="btn" onclick="Cancelbutton();" />
        </div>
    </div>
}
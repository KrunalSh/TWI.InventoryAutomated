@model  TWI.InventoryAutomated.Models.Instance
@{
    ViewBag.Title = "InstanceAuthentication";
}
@using (Html.BeginForm("Home", "Home", FormMethod.Post, new { onsubmit = "return SubmitForm(this)" }))
{
    <div class="container" style="width:110%">
        <div class="row">
            <div class="form-group">
                @Html.LabelFor(model => model.ID, "Instance", htmlAttributes: new { @class = "control-label" })
                @Html.DropDownListFor(Model => Model.ID, new SelectList(ViewBag.Instances, "ID", "InstanceName"), new { @class = "form-control", @id = "Instances" })
                @Html.ValidationMessageFor(model => model.ID)
            </div>
            <div class="form-group">
                <label class="control-label">Company</label>
                <select id="Companies" class="form-control"></select>
            </div>
            <br />
            <div class="form-group" style="padding-left:200px;">
                <input type="submit" value="Proceed" class="btn btn-primary" />
            </div>
        </div>
    </div>
}
@section scripts{


    <script>
        $(document).ready(function () {
            fetchCompanies();
        });

        $('#Instances').change(function () {
            fetchCompanies();
        });
        function fetchCompanies() {
            $.getJSON('/Home/GetCompanies', { intInstID: $('#Instances').val() }, function (data) {
                $.each(data, function () {
                    $('#Companies').append('<option value=' +
                        this.ID + '>' + this.CompanyName + '</option>');
                });
            }).fail(function (jqXHR, textStatus, errorThrown) {
                alert('Error getting Companies!');
            });
        }
        function SubmitForm(form) {
            if ($('#Instances').val() != null && $('#Companies').val() != null) {
                $.ajax({
                    type: "POST",
                    url: form.action,
                    data: { 'InstId': $('#Instances').val(), 'CompId': $('#Companies').val(), 'InstName': $('#Instances  option:selected').text(), 'compName': $('#Companies  option:selected').text() },
                    success: function (data) {
                        if (data.success)
                            location.href = data.message;
                    }
                });
            }
            return false;
        }
    </script>
}


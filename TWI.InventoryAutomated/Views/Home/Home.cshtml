
@{
    ViewBag.Title = "Home";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using TWI.InventoryAutomated.DataAccess;

<div class="container">

    <div class="row" style="padding-bottom:30px;padding-left:20px">
        @if (CommonServices.IsUserhasPermissionsOnModule("InBound") || CommonServices.IsUserSuperAdmin())
        {
            <div class="col-sm-4">
                <div class="input-group" style="float:left;padding:11px;">
                    <button type="button" class="btn" style="width:250px; height:90px;">InBound</button>
                </div>
            </div>
        }
        @if (CommonServices.IsUserhasPermissionsOnModule("OutBound") || CommonServices.IsUserSuperAdmin())
        {
            <div class="col-sm-4">
                <div class="input-group" style="float:left;padding:11px;">
                    <button type="button" class="btn" style="width:250px;height:90px;">OutBound</button>
                </div>
            </div>
        }
        @if (CommonServices.IsUserhasPermissionsOnModule("Internal") || CommonServices.IsUserSuperAdmin())
        {
            <div class="col-sm-4">
                <div class="input-group" style="float:left;padding:11px;">
                    <button type="button" class="btn" style="width:250px;height:90px;">Internal</button>
                </div>
            </div>
        }
        @if (CommonServices.IsUserhasPermissionsOnModule("Admin") || CommonServices.IsUserSuperAdmin())
        {
            <div class="col-sm-4">
                <div class="input-group" style="float:left;padding:11px;">
                    <button type="button" class="btn" style="width:250px;height:90px;" onclick="location.href='@Url.Action("SubMenu", "Home")'">Admin</button>
                </div>
            </div>
        }
        <div class="col-sm-4">
            <div class="input-group" style="float:left;padding:11px;">
                <button type="button" class="btn" style="width:250px;height:90px;" onclick="location.href='@Url.Action("LogOut","Home")'">Logout</button>
            </div>
        </div>
    </div>
</div>

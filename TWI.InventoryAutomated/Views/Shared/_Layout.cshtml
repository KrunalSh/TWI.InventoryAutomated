<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - TWI Inventory Management</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div style="max-width:100%;width:100%;">
        <div style="background:#7E1617;width:100%;height:80px;vertical-align:top;margin-top:-50px;">
            <img src="~/images/TWILogo.png" width="100px" height="80px" style="vertical-align:middle;padding:5px;" />
        </div>
        <div style="margin:auto;background:#ffffff;width:98%;padding:15px;">
            @RenderBody()
        </div>
        <div style="float:right;position:fixed;bottom:0;width:100%;height:25px;background:#7E1617;">
            <div style="font-family:Arial 'Times New Roman';font-size:12px;font-weight:bold;color:white;vertical-align:middle;padding-top:5px;padding-left:15px;">&copy; Theodor Wille Intertrade LLC - 2018 </div>
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>

        <div class="collapse navbar-collapse" style="margin-top:5px;">
            @using (Html.BeginForm("StockCountSheetTest", "StockCount", FormMethod.Get, new { @class = "navbar-form navbar-left" }))
            {
                <div class="form-group">
                    <input type="text" name="search" value="@ViewBag.Search" class="form-control" placeholder="Enter value to search" />
                </div>
                <button type="submit" value="Search" class="btn btn-primary" style="font-weight:600;">Search</button>
                <a class="btn btn-primary" style="width:100px;height:33px;padding-left:7px;padding-top:5px;text-align:center;font-weight:bold;" onclick="ShowAdjustment();">Adjustment</a>
            }
        </div>
        <div id="divAdjustments" style="float:left;width:100% !important;margin-left:15px;display:none;">
            <div class="row" style="margin:10px !important;">
                <div style="float:left;margin-right:10px;">
                    @Html.DropDownList("ZoneCodes", ViewBag.ZoneCodes as SelectList, new { @class = "form-control", @id = "ddlZoneCodes" })
                </div>
                <div style="float:left;margin-right:10px;">
                    @Html.DropDownList("BinCodes", ViewBag.BinCodes as SelectList, new { @class = "form-control", @id = "ddlBinCodes" })
                </div>
                <div style="float:left;margin-right:10px;margin-bottom:10px;">
                    <input type="text" class="form-control" placeholder="Item No" id="txtItemNo" name="txtItemNo" width="80" />
                </div>
                <div style="float:left;margin-right:10px;margin-bottom:10px;">
                    <input type="text" class="form-control" placeholder="Lot Not" id="txtLotNo" name="txtLotNo" width="80" />
                </div>
                <div style="float:left;margin-right:10px;margin-bottom:10px;">
                    <input type="text" class="form-control" placeholder="Expiry Date" id="txtExpDate" name="txtExpDate" width="80" />
                </div>
                <div style="float:left;margin-right:10px;margin-bottom:10px;">
                    <input type="text" class="form-control" placeholder="Qty found" id="txtPhyQty" name="txtPhyQty" width="80" />
                </div>
                <div style="float:left;margin-bottom:10px;">
                    <a class="btn btn-primary" style="width:50px;height:33px;padding-left:7px;padding-top:5px;text-align:center;font-weight:bold;" onclick="SaveAdjustments();">Save</a>
                    <a class="btn btn-primary" style="width:60px;height:33px;padding-left:7px;padding-top:5px;text-align:center;font-weight:bold;" onclick="CancelAdjustment();">Cancel</a>
                </div>
            </div>
        </div>
        <div style="float:left;width:100% !important;margin:0 0 0 15px;">
            <div style="margin:0 15px 20px 10px !important;">
                @grid.Table(
                    tableStyle: "table table-responsive table-bordered",
                    columns: grid.Columns(
                      grid.Column(columnName: "DocType", header: "Doc Type"),
                      grid.Column(columnName: "ZoneCode", header: "Zone Code"),
                      grid.Column(columnName: "BinCode", header: "Bin Code"),
                      grid.Column(columnName: "ItemNo", header: "Item No"),
                      grid.Column(columnName: "Description", header: "Description"),
                      grid.Column(columnName: "LotNo", header: "Lot No"),
                      grid.Column(columnName: "ExpirationDate", header: "Expiry Date"),
                      grid.Column(columnName: "PhysicalQty", header: "Phy. Qty",format:@<text><div class="edit" data-id="@item.ID" data-propertyname="PhysicalQty">@item.PhysicalQty</div></text>)
)
)
                <div class="row">
                    <div class="col-sm-6">
                        @grid.PagerList(mode: WebGridPagerModes.All, paginationStyle: "pagination pagination-small pagination-right")
                    </div>
                </div>

                @Html.Hidden("dir", grid.SortDirection)
                @Html.Hidden("col", grid.SortColumn)
                @Html.HiddenFor(x => x.FirstOrDefault().TeamID);

            </div>
        </div>
    </div>
</div>

@section scripts
    {
    <script type="text/javascript" charset="utf-8" src="//cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js"></script>

    @*<script src="~/Scripts/jquery-1.10.2.js"></script>*@
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="https://www.appelsiini.net/download/jquery.jeditable.js"></script>

    <script>
        $(function () {
            var dir = $('#dir').val();
            var col = $('#col').val();
            var header = $("th a[href*=" + col + "]");
            if (dir === "Ascending") {
                header.text(header.text() + "  ▲");
            }
            if (dir === "Descending") {
                header.text(header.text() + "  ▼");
            }
        });

        $(document).ready(function () {

            var currentCult = getCookie("Language");
            var Path = FetchPathforCultureFile(currentCult);
            var oldvalue = '';
            $('.edit').editable('/StockCount/UpdateQty', {
                cssclass: 'jeditForm',
                width: '50px',
                height: 'none',
                onsubmit: function (settings, original) {
                    oldvalue = original.revert;
                },
                submitdata: function () {
                    return {
                        id: $(this).data('id'),
                        PropertyName: $(this).data('propertyname')
                    };
                },
                callback: function (value, settings) {
                    var jsonData = $.parseJSON(value);
                    if (jsonData.status) { $(this).text(jsonData.value); }
                    else {
                        $(this).text(oldvalue);
                    }
                }
            });

            $(".edit").keypress(function (e) {
                if (e.which === 46) {
                    if ($(this).val().indexOf('.') !== -1) {
                        return false;
                    }
                }

                if (e.which !== 8 && e.which !== 0 && e.which !== 46 && e.which !== 13 && (e.which < 48 || e.which > 57)) {
                    return false;
                }
                
            });



            $("#ddlZoneCodes").change(function () {

                var zonecode = $("#ddlZoneCodes").val();

                if (zonecode === '-- Select Zone --' || zonecode === '-1') {
                    $("#ddlBinCodes").empty();
                    var opt = new Option('-- Select Bin --', '-1');
                    $("#ddlBinCodes").append(opt);
                    $("#txtItemNo").empty();
                    $("#txtLotNo").empty();
                    $("#txtPhyQty").empty();
                    $("#txtExpDate").empty();
                }
                else {
                    $.ajax({
                        url: "/StockCount/GetBinsByTeamID?ZoneCode=" + zonecode,
                        type: "GET",
                        datatype: "Json",
                        success: function (data) {
                            $("#ddlBinCodes").empty();
                            $("#txtItemNo").empty();
                            $("#txtLotNo").empty();
                            $("#txtPhyQty").empty();
                            $("#txtExpDate").empty();
                            for (var i = 0; i < data.length; i++) {
                                var binopt = new Option(data[i], data[i]);
                                $("#ddlBinCodes").append(binopt);
                            }
                        }
                        //error: function (data) {

                        //}
                    });
                }
            });

            $("#txtExpDate").datepicker({
                changeMonth: true,
                changeYear: true,
                dateFormat: 'dd/mm/yy'
            });
        });

         function SaveAdjustments() {
            var zonecode = $("#ddlZoneCodes").val();
            var bincode = $("#ddlBinCodes").val();
            var itemno = $("#txtItemNo").val();
            var lotno = $("#txtLotNo").val();
            var expdate = $("#txtExpDate").val();
            var teamId = '@Convert.ToInt32(Session["TeamID"])';
            var Qty = $("#txtPhyQty").val();
            $.ajax({
                url: "/StockCount/SaveAdjustments",
                datatype: "json",
                type: "GET",
                async: true,
                data: { TeamID: teamId, Zonecode: zonecode, BinCode: bincode, ItemNo: itemno, LotNo: lotno, ExpDate: expdate, Qty: Qty },
                success: function (data) {
                    if (data.success) {
                        alert(data.message);
                        window.location.href = "/StockCount/StockCountSheetTest";
                        RefreshAllocationList('@Convert.ToInt32(Session["TeamID"])');
                        $("#divAdjustments").hide();
                    }
                    else {
                        alert(data.message);
                    }
                }
            });
        }

        function ShowAdjustment() {
            $("#divAdjustments").show();
            $("#txtItemNo").empty();
            $("#txtPhyQty").empty();
            $("#txtLotNo").empty();
            $("#txtExpDate").empty();
        }

        function CancelAdjustment() {
            $("#divAdjustments").hide();
            $("#txtItemNo").empty();
            $("#txtPhyQty").empty();
            $("#txtLotNo").empty();
            $("#txtExpDate").empty();
        }

    </script>
}

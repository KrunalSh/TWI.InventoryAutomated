                            buttons: {
                                Yes: function () {

                                    $.ajax({
                                        url: "/StockCount/UpdateAllocation",
                                        type: "GET",
                                        datatype: "Json",
                                        data: { TeamID: teamId, BinCode: bincode, ItemNo: itemno, LotNo: lotno, ExpDate: expdate, Qty: Qty },

                                                        buttons: {
                                                            Ok: function () {
                                                                $(this).dialog("close");
                                                            }
                                                        }
                                                    });
                                                window.location.href = "/StockCount/StockCountSheetTest";
                                            }
                                        }
                                    });
                                    $(this).dialog("close");
                                },
                                No: function () {
                                    $(this).dialog("close");

                                    }
                                },
                                close: function (event, ui) {
                                      $(this).remove();
                                 }
                            });


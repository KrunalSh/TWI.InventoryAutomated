@model TWI.InventoryAutomated.Models.StockCountHeader
@{
    Layout = null;
}


@using (Html.BeginForm("NewStockCount", "StockCount", FormMethod.Post, new { onsubmit = "return SubmitForm(this)" }))
{
    @Html.HiddenFor(model => model.ID)
    @Html.HiddenFor(model => model.Status)
<div class="form-group txtNotification">
    @Html.LabelFor(model => model.SCCode, TWI.InventoryAutomated.Resources.GlobalResource.Code, new { @class = "control-label" })
    <span class="requiredfield">*</span>
    @if (Model.ID == 0)
    {
        @Html.EditorFor(model => model.SCCode, new { htmlAttributes = new { @class = "form-control", @maxlength = 10 } })
    }
    else
    {
        @Html.EditorFor(model => model.SCCode, new { htmlAttributes = new { @class = "form-control", @maxlength = 10, @readonly = true } })
    }

    @Html.ValidationMessageFor(model => model.SCCode)
</div>
    <div class="form-group">
        @Html.LabelFor(model => model.SCDesc, TWI.InventoryAutomated.Resources.GlobalResource.Description, new { @class = "control-label" })
        <span class="requiredfield">*</span>

        @Html.EditorFor(model => model.SCDesc, new { htmlAttributes = new { @class = "form-control", @maxlength = 50 } })
        @Html.ValidationMessageFor(model => model.SCDesc)
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.LocationCode, TWI.InventoryAutomated.Resources.GlobalResource.LocationCode, new { @class = "control-label" })
        <span class="requiredfield">*</span>
        @if (Model.ID == 0)
        {@Html.EditorFor(model => model.LocationCode, new { htmlAttributes = new { @class = "form-control", @maxlength = 50 } }) }
        else
        { @Html.EditorFor(model => model.LocationCode, new { htmlAttributes = new { @class = "form-control", @maxlength = 50, @readonly = true } })}

        @Html.ValidationMessageFor(model => model.LocationCode)
    </div>
    <div class="form-group">
        <input type="checkbox" id="chkClose" checked="@ViewBag.Status" hidden="@ViewBag.Enabled" />
        @if (ViewBag.Enabled == false){<label><span class="control-label" style="font-family:Calibri if;font-weight:600;padding-left:4px;font-size:14px;">Close Batch</span></label>}
        <input type="reset" value="@TWI.InventoryAutomated.Resources.GlobalResource.Cancel" class="btn" onclick="Cancelbutton();" style="float:right;" />
        <input type="submit" value="@TWI.InventoryAutomated.Resources.GlobalResource.Save" class="btn btn-primary" style="float:right;margin-right:7px;" />
    </div>
}
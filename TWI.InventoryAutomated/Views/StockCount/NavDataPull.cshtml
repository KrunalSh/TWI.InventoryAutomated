@model TWI.InventoryAutomated.Models.StockCountModel
@{
    ViewBag.Title = "Stock Count Data Pull";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row">
        <div style="margin:auto;width:100%;border:2px #808080 solid;">
            <div style="background-color: #808080;color: #ffffff;padding: 5px;height: 30px;" id="topHeading">
                <div style="font-weight:bold">@TWI.InventoryAutomated.Resources.GlobalResource.StockCountHeader</div>
                <a style="margin-top:-24px;float: right;color: white;" href='@Url.Action("Index", "StockCount")'><i class="fa fa-home fa-2x"></i></a>
            </div>
            <div style="width:100% !important;padding:15px;" class="table-responsive">
                <div class="row col-sm-12" style="margin:auto;padding-bottom:10px;width:100% !important">
                    <div style="float:left;">
                    @Html.DropDownListFor(model => model.ID, ViewBag.BatchList as SelectList, new { @class = "form-control", @id = "ddlBatches" })</div>
                    <div style="float:right;">
                        <a class="btn btn-success" style="width:60px;" data-toggle="tooltip" title="Add New Batch" onclick="PopupForm('@Url.Action("NewStockCount", "StockCount")')"><i class="fa fa-plus fa-lg"></i></a>
                        <input type="submit" style="width:70px;" value="@TWI.InventoryAutomated.Resources.GlobalResource.Pull" class="btn btn-primary" title="Pull Batch Data" onclick="PullData();" />
                        <input type="submit" style="width:70px;" value="@TWI.InventoryAutomated.Resources.GlobalResource.Push" class="btn btn-danger" title="Push Batch Data" onclick="Cancelbutton();" />
                    </div>
                </div>
                <div class="row col-sm-12" style="margin:auto;padding-bottom:10px;width:100% !important">
                    <div class="col-sm-3 field_background" style="padding-top:5px;" id="SCCode">Batch Code: @Html.DisplayFor(model => model.SCCode) </div>
                    <div class="col-sm-3 field_background" style="padding-top:5px;" id="SCDesc">Batch Title: @Html.DisplayFor(model => model.SCDesc) </div>
                    <div class="col-sm-3 field_background" style="padding-top:5px;" id="TotalItem">Item Count: @Html.DisplayFor(model => model.TotalItemCount)</div>
                    <div class="col-sm-3 field_background" style="padding-top:5px;" id="Status">Batch Status : @Html.DisplayFor(model => model.Status)</div>
                </div>
                <div class="row col-sm-12" style="margin:auto;padding-bottom:10px;width:100% !important">
                    <table id="HeaderTable" class="table table-striped dt-responsive display nowrap table-bordered">
                        <thead>
                            <tr>
                                <th style="">Item No</th>
                                <th>Description</th>
                                <th>Zone Code</th>
                                <th>Bin Code</th>
                                <th>Lot No</th>
                                <th>Expiration Date</th>
                                <th>Qty</th>
                                <th>Qty (Phy. Inv)</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var _std in Model._stockCountItems)
                             {
                                <tr>
                                    <td>@_std.ItemNo</td>
                                    <td>@_std.Description</td>
                                    <td>@_std.ZoneCode</td>
                                    <td>@_std.BinCode</td>
                                    <td>@_std.LotNo</td>
                                    <td>@_std.ExpirationDate</td>
                                    <td>@_std.NAVQty</td>
                                    <td>@_std.PhyicalQty</td>
                                </tr>
                             }

                        </tbody>
                    </table>
                </div>
                <div></div>
                <div id="msgdialog"></div>
             </div>
            </div>
    
</div>


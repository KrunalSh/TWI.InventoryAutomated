        function PullData() {
            var currentCult = getCookie("Language");
            var Path = FetchPathforCultureFile(currentCult);
            if ($("#ddlBatches").val() == -1) {

                $('<div></div>').appendTo('body')
                    .html("<div><h6>Batch selection is mandatory to pull data from NAV ERP</h6></div>")
                    .dialog({
                        modal: true, title: 'Batch Data Pull', zIndex: 10000, autoOpen: true, width: 500, resizable: true,
                        buttons: {
                            Ok: function () {
                                $(this).dialog("close");
                            }
                        }
                    });
                 return;
            }
            $('<div></div>')
                .appendTo('body')
                .html("<div><h6>" + "@Html.Raw(TWI.InventoryAutomated.Resources.GlobalResource.MsgBatchExistingDataOverwrite)" + "</h6></div>")

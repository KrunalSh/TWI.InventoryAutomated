                                                    { "data": "LotNo" },
                                                    { "data": "ExpirationDate" },
                                                    { "data": "NAVQty" },
                                                    { "data": "PhyicalQty" }],

                                                "aaSorting": [[4, "desc"]],
                                                "responsive": true,
                                                "language": {
                                                    "emptyTable": "No data found, Please click on <b>Pull</b> Button to retrieve Batch Data from NAV ERP",
                                                    "url": Path
                                                }
                                            });
                                           
                                        }
                                    });
                                   
                                }
                            });
                            $(this).dialog("close");
                        },
                        No: function () {
